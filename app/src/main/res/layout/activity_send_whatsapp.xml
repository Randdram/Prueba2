<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etWhatsappPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de WhatsApp (con código de país)"
            android:inputType="phone"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSelectWhatsappContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar de contactos"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etWhatsappMessage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Escribe tu mensaje"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSendWhatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar por WhatsApp"
            android:layout_marginBottom="8dp"
            android:drawableStart="@android:drawable/ic_menu_send"/>

        <Button
            android:id="@+id/btnWhatsappBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar"/>
    </LinearLayout>
</ScrollView>